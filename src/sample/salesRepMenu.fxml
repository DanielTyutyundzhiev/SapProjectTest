                <Font name="System Bold" size="14.0" />
            </font></Button>
        <Button fx:id="addProduct" layoutX="336.0" layoutY="115.0" mnemonicParsing="false" onAction="#makeSale" prefHeight="38.0" prefWidth="231.0" style="-fx-background-color: F88C75;" text="Sell Products" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
        <Button fx:id="logoutButton" layoutX="398.0" layoutY="332.0" mnemonicParsing="false" onAction="#logoutOnAction" prefHeight="38.0" prefWidth="154.0" style="-fx-background-color: F88C75;" text="Logout" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
        <Button layoutX="336.0" layoutY="166.0" mnemonicParsing="false" onAction="#previewSales" prefHeight="38.0" prefWidth="231.0" style="-fx-background-color: F88C75;" text="Preview My Sales" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
    </children>
</AnchorPane>
