<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SalesRepMenuController">
    <children>
        <Button layoutX="32.0" layoutY="213.0" mnemonicParsing="false" onAction="#editUser" prefHeight="38.0" prefWidth="231.0" style="-fx-background-color: F88C75;" text="Edit My Users " textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
        <AnchorPane prefHeight="93.0" prefWidth="600.0" style="-fx-background-color: F88C75;">
            <children>

                <Label layoutX="200.0" layoutY="34.0" text="Sales Representative Menu" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Button alignment="CENTER" layoutX="32.0" layoutY="115.0" mnemonicParsing="false" onAction="#addUser" prefHeight="38.0" prefWidth="231.0" style="-fx-background-color: F88C75;" text="Add A User" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
        <Button layoutX="32.0" layoutY="166.0" mnemonicParsing="false" onAction="#deleteUser" prefHeight="38.0" prefWidth="231.0" style="-fx-background-color: F88C75;" text="Remove A Sales Representative" textFill="WHITE">
